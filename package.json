{
  "name": "template-markdown",
  "version": "1.0.0",
  "description": "Starter repository for markdown projects at DeNepo",
  "scripts": {
    "format": "prettier --write ./",
    "format:check": "prettier --check ./",
    "spell-check": "cspell \"./**\"",
    "lint:ls": "ls-lint",
    "lint:md": "markdownlint --config ./.markdownlint.jsonc --fix ./ ",
    "start": "cross-env NODE_OPTIONS=--trace-deprecation react-scripts start"
  },
  "author": "DeNepo",
  "license": "MIT",
  "devDependencies": {
    "@ls-lint/ls-lint": "^2.0.0",
    "cspell": "^6.31.1",
    "markdownlint-cli": "^0.34.0",
    "prettier": "^2.8.8",
    "webpack-cli": "^5.1.4"
  }
}
